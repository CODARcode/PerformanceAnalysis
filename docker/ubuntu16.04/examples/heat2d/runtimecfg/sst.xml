<?xml version="1.0"?>
<!-- Config XML file fo the
     - heatSimulation
     - heatAnalysis
     - heatVisualization
     executables -->

<adios-config>

    <!--===========================================
           Configuration for the Simulation Output 
        ===========================================-->

    <io name="SimulationOutput">
        <engine type="SST">
            <parameter key="DataTransport" value="rdma"/>
        </engine>
    </io>


    <!--=========================================
           Configuration for the Analysis Output
        =========================================-->

    <io name="AnalysisOutput">
        <engine type="SST">
            <parameter key="DataTransport" value="rdma"/>
	    </engine>
    </io>


    <!--=============================================
           Configuration for the Visualization Input
        =============================================-->
    
    <io name="VizInput">
        <engine type="SST">
            <parameter key="DataTransport" value="rdma"/>
        </engine>
    </io>

</adios-config>
